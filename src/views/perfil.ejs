        function leerJSON() {
            const selectEstado = document.getElementById('estado');
            const selectPais = document.getElementById('pais')
            const selectCiudad = document.getElementById('ciudad');

            fetch('data-paises.json')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                    return response.json(); // Convierte la respuesta en un objeto JSON
                })
                .then(data => {
                   
                    //agrega los paises al select
                    const paises = data.paises[0]
                    console.log(paises)
                    const _paises = paises.filter(e => e.descripcion.toLowerCase().trim() === 'pais');
                    _paises.forEach(e => {
                        console.log(e.nombre, e.id);
                        selectPais.innerHTML += `<option value="${e.id}">${e.nombre}</option>`
                    })

                    //agrega los estados al select                   
                    selectPais.addEventListener('change', (event) => {
                        const idPaisSeleccionado = event.target.value;
                        const estados = paises.filter(e => e.descripcion.toLowerCase().trim() === 'estado' && e.id_asociado === idPaisSeleccionado);
                        console.log(estados)
                        selectEstado.innerHTML = '<option value="">Seleccione un estado</option>'
                        selectCiudad.innerHTML = '<option value="">Seleccione una ciudad</option>';
                        estados.forEach(e => {
                            selectEstado.innerHTML += `<option value="${e.id}">${e.nombre}</option>`;
                        });
                    });

                    //agrega los ciudades al select
                    const selectEstado = document.getElementById('estado')
                    selectEstado.addEventListener('change', (event) => {
                        selectCiudad.innerHTML = '<option value="">Seleccione una ciudad</option>';
                        const idEstadoSeleccionado = event.target.value;
                        const ciudades = paises.filter(e => e.descripcion.toLowerCase().trim() === 'ciudad' && e.id_asociado === idEstadoSeleccionado);

                        ciudades.forEach(e => {
                            selectCiudad.innerHTML += `<option value="${e.id}">${e.nombre}</option>`;
                        });

                    })
                })
                .catch(error => {
                    console.error('Hubo un problema con la operación fetch:', error);
                });
        }

    </script>
